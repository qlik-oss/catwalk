.topbar {
  align-items: center;
  align-self: flex-start;
  background: #fff;
  border-bottom: 1px solid #d9d9d9;
  display: flex;
  flex-shrink: 0;
  font-size: 1rem;
  height: 7em;
  position: relative;
  width: 100%;

  .reloaded {
    align-self: center;
    font-size: 1.5em;
    padding-right: 1em;
  }

  .topbarLogo .logo-svg {
    animation: unset;
    cursor: pointer;
    height: 5em;
  }
}
