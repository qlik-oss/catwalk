.selections {
  display: flex;
  flex-grow: 2;
  flex-shrink: 0;
  width: 70%;

  .selections-inner {
    display: flex;
    overflow: auto;
  }

  li {
    align-items: center;
    background: #fff;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    font-size: 1.5em;
    justify-content: center;
  }

  .clear {
    background: #fff;
    border-right: 1px solid #d9d9d9;
    cursor: pointer;
    font-size: 2rem;
    padding: 0;
    width: 8rem;
  }

  .none {
    align-self: center;
    height: 100%;
    padding: 1em;
  }
}
